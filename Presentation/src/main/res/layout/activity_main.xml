<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".view.activity.MainActivity"
    >
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_133_dip"
        android:background="@drawable/head">
        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="@dimen/dimen_30_dip"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dimen_20_dip"
            android:scaleType="center"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/more"
            />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_server"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="@dimen/dimen_59_dip"
        android:layout_width="@dimen/dimen_646_dip"
        android:layout_height="@dimen/dimen_89_dip"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="服务器IP"
            android:gravity="center"
            android:textSize="@dimen/dimen_30_dip"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1.2"/>
        <TextView
            android:id="@+id/tv_server_ip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="192.168.122.122"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dimen_30_dip"
            android:background="@drawable/text_border"
            android:layout_weight="1.9"/>
        <Button
            android:id="@+id/btn_set_server"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_44_dip"
            android:layout_marginRight="@dimen/dimen_43_dip"
            android:text="编辑"
            android:textSize="@dimen/dimen_30_dip"
            android:textColor="@color/white"
            android:background="@drawable/button_edt_bg"
            android:layout_weight="1"/>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dimen_646_dip"
        android:layout_height="@dimen/dimen_639_dip"
        android:layout_marginTop="@dimen/dimen_44_dip"
        android:layout_below="@id/ll_server"
        android:layout_centerHorizontal="true"
        android:elevation="@dimen/dimen_20_dip"
        >
    <LinearLayout
        android:id="@+id/ll_watch_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_89_dip"
        android:layout_gravity="top"
        android:background="@color/list_title"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="ID"
            android:textSize="@dimen/dimen_30_dip"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1.2"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="站点"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dimen_28_dip"
            android:layout_weight="1.9"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_44_dip"
            android:layout_marginRight="@dimen/dimen_43_dip"
            android:text="编辑"
            android:textSize="@dimen/dimen_25_dip"
            android:textColor="@color/white"
            android:visibility="invisible"
            android:background="@color/colorPrimary"
            android:layout_weight="1"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lv_watches"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_550_dip"
        android:layout_gravity="bottom"
        android:layout_centerHorizontal="true"
        android:divider="@null"
        />
    </android.support.v7.widget.CardView>
</RelativeLayout>
