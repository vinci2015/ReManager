<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable
            name="item"
            type="com.njrobot.huangyouqiang.redevicemanager.presentation.view.adapter.handler.WatchRecyclerHandler"/>
        <variable
            name="presenter"
            type="com.njrobot.huangyouqiang.redevicemanager.presentation.presenter.MainPresenter"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/dimen_10_dip"
        android:paddingTop="@dimen/dimen_10_dip"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_watch_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{item.watch.name}"
            android:textSize="@dimen/dimen_30_dip"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1.2"/>
        <TextView
            android:id="@+id/tv_watch_site"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_89_dip"
            android:gravity="center"
            android:text="@={item.watch.site}"
            android:background="@drawable/text_border"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dimen_28_dip"
            android:layout_weight="1.9"/>
        <Button
            android:id="@+id/btn_edt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_44_dip"
            android:layout_marginRight="@dimen/dimen_43_dip"
            android:onClick="@{() -> presenter.onClickChangeSite(item)}"
            android:text="编辑"
            android:textSize="@dimen/dimen_25_dip"
            android:textColor="@color/white"
            android:background="@drawable/button_edt_bg"
            android:layout_weight="1"/>
    </LinearLayout>
</layout>